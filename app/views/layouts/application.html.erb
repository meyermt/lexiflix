<!DOCTYPE html>
<html>
  <head>
    <title>lexiflix</title>
    <%= csrf_meta_tags %>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <%= stylesheet_link_tag    'css/bootstrap.min.css'%>

    <%= stylesheet_link_tag    'https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic' %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag    'css/font-awesome.min.css'%>
    <%= javascript_include_tag 'js/jquery-3.2.1.min.js' %>
    <%= javascript_include_tag 'js/bootstrap.min.js' %>
    <!-- Plugin JavaScript -->
    <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">
    <%= render 'layouts/navbar' %>
      <% if flash[:notice].present? %>
        <h4>something here</h4>
        <div class="alert alert-info">
          <p><strong><%= flash[:notice] %></strong></p>
        </div>
      <% end %>
      <% if flash[:alert].present? %>
        <h4>something here</h4>
        <div class="alert alert-danger">
          <p><strong><%= flash[:alert] %></strong></p>
        </div>
      <% end %>
      <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
