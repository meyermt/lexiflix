<div class="container">
<div class="page-header">
  <h1 class="network-name">Change Password for <%= @user.username %></h1>
</div>

<% if @user.errors.full_messages.any? %>
  <ul class="text-danger">
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="col-sm-4">

  <%= form_tag("/resets/#{@user.id}", method: 'patch') do  %>

    <div class="form-group">
      <%= label_tag :current_password, "Current Password" %>
      <%= password_field_tag :current_password, "", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :password, "New Password" %>
      <%= password_field_tag :password, "", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :password_confirmation, "Confirm New Password" %>
      <%= password_field_tag :password_confirmation, "", class: 'form-control' %>
    </div>

    <%= submit_tag "Change Password", class: 'btn btn-info btn-lg network-name'%>
    or
    <%= link_to "Cancel", root_url %>

  <% end %>

  </div>
</div>
</div>
