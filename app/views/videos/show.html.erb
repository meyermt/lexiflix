      <%= form_tag("/videos/#{@video.id}/edit", method: 'get') do  %>
        <%= submit_tag "Edit Video Details", class: 'btn btn-primary btn-lg'%>
      <% end %>
      </div>
      <div class="col-sm-2">
        <%= form_tag("/videos/#{@video.id}", method: 'delete') do  %>
