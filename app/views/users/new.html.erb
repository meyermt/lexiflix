<div class="container">
<div class="page-header">
  <h1 class="network-name">Sign Up</h1>
</div>

<% if  @user.errors.full_messages.any? %>
  <ul class="text-danger">
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="col-sm-4">

  <%= form_tag("/users", method: 'post') do  %>

    <div class="form-group">
      <%= label_tag :name, "Your name:" %>
      <%= text_field_tag :name, "", autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :username, "Your username:" %>
      <%= text_field_tag :username, "", autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :level, "Your lexical level:" %>
      <%= text_field_tag :level, "", autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :email, "Email Address" %>
      <%= text_field_tag :email, "", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :password, "Pick a Password" %>
      <%= password_field_tag :password, "", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :student_count, "Number of Students" %>
      <%= select_tag(:student_count, options_for_select(0..20), {:onChange => 'updateCountForm()', :class => 'form-control'}) %>
    </div>

    <div class="extra-fields">
    </div>

    <%= submit_tag "Sign Me Up", class: 'btn btn-success btn-lg network-name'%>
    or
    <%= link_to "Cancel", root_url %>

  <% end %>

  </div>
</div>
</div>
