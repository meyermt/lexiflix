<div class="container">
<div class="page-header">
  <h1>Change Password</h1>
</div>

<% if  @user.errors.full_messages.any? %>
  <ul class="text-danger">
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="col-sm-4">

  <%= form_tag("/products/#{@user.id}", method: 'patch') do  %>

    <div class="form-group">
      <%= label_tag :title, "Product Title" %>
      <%= text_field_tag :title, @product.title, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :photo_url, "Link to Image or Photo" %>
      <%= text_field_tag :photo_url, @product.photo_url, class: 'form-control' %>
    </div>

    <%= submit_tag "Update Password", class: 'btn btn-success btn-lg'%>
    or
    <%= link_to "Cancel", root_url %>

  <% end %>

  </div>
</div>
</div>
